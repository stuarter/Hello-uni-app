
.page.data-v-1cf27b2a {
	min-height: 100vh;
	background-color: #f5f5f5;
	position: relative;
}

/* 顶部蓝色区域 */
.header.data-v-1cf27b2a {
	position: relative;
	width: 100%;
	z-index: 1;
}
.bg-image.data-v-1cf27b2a {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100vh;
	z-index: 0;
}
.header-content.data-v-1cf27b2a {
	position: relative;
	z-index: 1;
	padding: 30rpx 40rpx;
}

/* logo行 */
.logo-row.data-v-1cf27b2a {
	display: flex;
	flex-direction: row;
	align-items: center;
	margin-bottom: 30rpx;
}
.logo-icon.data-v-1cf27b2a {
	width: 40rpx;
	height: 52rpx;
	/* margin-right: 4rpx; */
}
.logo-text.data-v-1cf27b2a {
	font-size: 30rpx;
	color: #ffffff;
	font-weight: bold;
}

/* 标语 */
.slogan.data-v-1cf27b2a {
	margin-bottom: 16rpx;
	text-align: center;
}
.slogan-main.data-v-1cf27b2a {
	font-size: 52rpx;
	font-weight: bold;
	color: #ffffff;
}
.slogan-sub-row.data-v-1cf27b2a {
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
	background: linear-gradient(to right, transparent, rgba(12, 82, 196, 0.5) 30%, rgba(12, 82, 196, 0.5) 70%, transparent);
	border-radius: 0;
	padding: 10rpx 24rpx;
	margin: 0 auto;
	width: -webkit-fit-content;
	width: fit-content;
}
.horn-icon.data-v-1cf27b2a {
	width: 32rpx;
	height: 32rpx;
	margin-right: 10rpx;
}
.slogan-sub.data-v-1cf27b2a {
	font-size: 28rpx;
	color: rgba(255, 255, 255, 0.85);
}

/* 能力图卡片 */
.card.data-v-1cf27b2a {
	margin: 100rpx 24rpx 0;
	background-color: #CDDBFE;
	border-radius: 24rpx;
	padding: 36rpx 30rpx 0;
	position: relative;
	z-index: 2;
	box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}
.card-top.data-v-1cf27b2a {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 30rpx;
}
.user-info.data-v-1cf27b2a {
	display: flex;
	flex-direction: row;
	align-items: center;
	flex: 1;
}
.avatar.data-v-1cf27b2a {
	width: 72rpx;
	height: 72rpx;
	border-radius: 50%;
	background-color: #e0e0e0;
}
.avatar-wrap.data-v-1cf27b2a {
	width: 72rpx;
	height: 72rpx;
	margin-right: 16rpx;
	flex-shrink: 0;
}
.avatar-default.data-v-1cf27b2a {
	width: 72rpx;
	height: 72rpx;
	border-radius: 50%;
	background-color: #d0d0d0;
}
.user-name-area.data-v-1cf27b2a {
	display: flex;
	flex-direction: row;
	align-items: center;
}
.user-name.data-v-1cf27b2a {
	font-size: 32rpx;
	font-weight: bold;
	color: #333333;
}
.name-input.data-v-1cf27b2a {
	font-size: 32rpx;
	font-weight: bold;
	color: #333333;
	width: 140rpx;
	border-bottom: 2rpx solid #4B8FFB;
	padding: 0;
	height: 50rpx;
}
.ability-label.data-v-1cf27b2a {
	font-size: 32rpx;
	font-weight: bold;
	color: #333333;
}
.change-avatar.data-v-1cf27b2a {
	display: flex;
	flex-direction: row;
	align-items: center;
}
.change-avatar-text.data-v-1cf27b2a {
	font-size: 26rpx;
	color: #4B8FFB;
}
.arrow-icon.data-v-1cf27b2a {
	width: 24rpx;
	height: 24rpx;
	margin-left: 6rpx;
}

/* 能力数据区域 */
.stats-area.data-v-1cf27b2a {
	position: relative;
	width: 100%;
	height: 240rpx;
	border-radius: 0 0 24rpx 24rpx;
	overflow: hidden;
}
.stats-bg.data-v-1cf27b2a {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	border-radius: 20rpx;
}
.stats-content.data-v-1cf27b2a {
	position: relative;
	z-index: 1;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: center;
	height: 100%;
	padding: 0 20rpx;
}
.stat-item.data-v-1cf27b2a {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.stat-icon-wrap.data-v-1cf27b2a {
	position: relative;
	width: 160rpx;
	height: 160rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	overflow: hidden;
}
.stat-item-bg.data-v-1cf27b2a {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: 0;
}
.stat-num.data-v-1cf27b2a {
	font-size: 56rpx;
	font-weight: bold;
	color: #0f59cf;
	position: relative;
	z-index: 1;
}
.stat-label.data-v-1cf27b2a {
	font-size: 24rpx;
	color: #0f59cf;
	margin-top: 12rpx;
}
